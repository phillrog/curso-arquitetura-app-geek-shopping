@model GeekShopping.Web.Models.ProductModel

<form method="post">
    <input asp-for="Id" hidden />
    <div cite="pt-4">
        <div class="card container" style="border: 1px solid #808080;">
            <div class="card-header text-light row" style="border-radius: 0px;"></div>
            <div class="card-body text-light row">
                <div class="col-12 col-md-6">
                    <h1 class="text-dark">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6">
                    <h1 class="text-dark">@((Model.Price).ToString("C"))</h1>
                </div>
            </div>
            <div class="footer row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn-success btn btn-square btn-lg form-control" style="height: 5px;">Back to List</a>
                </div>

                <div class="col-12 col-md-6">
                    <button type="submit" value="Create" class="btn-lg btn-primary form-control" style="height: 5px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
    }
